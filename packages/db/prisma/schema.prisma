generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Prosumer{
  id Int @id @default(autoincrement())
  connectionId String @unique
  password String
  phone String @unique
  username String
  SolarCapacity Float?
  City String?
  State String?
  pincode String?
  GPSLocation String?
  Year String?
  Load Float?
  Tilt Float?
  Azimuth Float?
  EnergyProdURL String?
  LoadConsumptionURL String?
  Transactions Transactions[]
  OpenInterest SellOrderBook[]
  prosumerData ProsumerData[]
  solarBrand String?
  setupStatus Boolean @default(false)
  createdAt DateTime @default(now())
  
  
}
model Consumer{
  id Int @id @default(autoincrement())
  connectionId String @unique
  username String
  phone String @unique
  password String
  Demand Float?
  City String?
  State String?
  pincode String?
  Year String?
  Load Float?
  LoadConsumptionURL String?
  setupStatus Boolean @default(false)
  Transactions Transactions[]
  OpenInterest BuyOrderBook[]
  consumerData ConsumerData[]
  
  createdAt DateTime @default(now())
}

model Transactions{
  id Int @id @default(autoincrement())
  date String
  TimeSlot Int
  SellerId String
  Seller Prosumer @relation(fields: [SellerId], references: [connectionId])
  BuyerId String
  Buyer Consumer @relation(fields: [BuyerId], references: [connectionId])
  Volume Float
  Price Float
  @@index([SellerId])
  @@index([BuyerId])
  @@index([TimeSlot])
}

model SellOrderBook{
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  TimeSlot Int
  SellerId String
  Seller Prosumer @relation(fields: [SellerId], references: [connectionId])
  Volume Float
  Price Float
  @@index([Price])
  @@index([TimeSlot])
}
model BuyOrderBook{
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  TimeSlot Int
  BuyerId String
  Buyer Consumer @relation(fields: [BuyerId], references: [connectionId])
  Volume Float
  Price Float
  @@index([Price])
  @@index([TimeSlot])
}
model ProsumerData{
  id Int @id @default(autoincrement())
  prosumerId String
  prosumer Prosumer @relation(fields: [prosumerId], references: [connectionId])
  date String
  TimeSlot Int
  Solargeneration Float
  netEnergy Float
  deviation Float
  @@index([prosumerId])
  @@index([TimeSlot])
  @@index([date])
  @@unique([prosumerId,TimeSlot,date])
}
model ConsumerData{
  id Int @id @default(autoincrement())
  consumerId String
  consumer Consumer @relation(fields: [consumerId], references: [connectionId])
  date String
  TimeSlot Int
  energyConsumption Float
  deviation Float
  @@index([consumerId])
  @@index([TimeSlot])
  @@index([date])
  @@unique([consumerId, TimeSlot,date])
}
