generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Prosumer{
  id Int @id @default(autoincrement())
  connectionId String @unique
  password String
  phone String @unique
  username String
  SolarCapacity String?
  City String?
  State String?
  pincode String?
  GPSLocation String?
  Year String?
  Load String?
  Tilt Int?
  Azimuth Int?
  EnergyProdURL String?
  LoadConsumptionURL String?
  Transactions Transactions[]
  OpenInterest SellOrderBook[]
  solarBrand String?
  setupStatus Boolean @default(false)
  createdAt DateTime @default(now())
  hederaAccountId String?
  
}
model Consumer{
  id Int @id @default(autoincrement())
  connectionId String @unique
  username String
  phone String @unique
  password String
  Demand String?
  City String?
  State String?
  pincode String?
  Year String?
  Load String?
  LoadConsumptionURL String?
  setupStatus Boolean @default(false)
  Transactions Transactions[]
  OpenInterest BuyOrderBook[]
  hederaAccountId String?
  
  createdAt DateTime @default(now())
}

model Transactions{
  id Int @id @default(autoincrement())
  date String
  TimeSlot String
  SellerId String
  Seller Prosumer @relation(fields: [SellerId], references: [connectionId])
  BuyerId String
  Buyer Consumer @relation(fields: [BuyerId], references: [connectionId])
  Volume Int
  Price Int
  @@index([SellerId])
  @@index([BuyerId])

}

model SellOrderBook{
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  TimeSlot String
  SellerId String
  Seller Prosumer @relation(fields: [SellerId], references: [connectionId])
  Volume Int
  Price Int
  @@index([Price])
  @@index([TimeSlot])
}
model BuyOrderBook{
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  TimeSlot String
  BuyerId String
  Buyer Consumer @relation(fields: [BuyerId], references: [connectionId])
  Volume Int
  Price Int
  @@index([Price])
  @@index([TimeSlot])
}